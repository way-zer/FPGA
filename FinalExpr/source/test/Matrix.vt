`timescale  10ns / 10ns
module Matrix_T;
        // Matrix Parameters   
        parameter PERIOD  = 10;


        // Matrix Inputs
        reg   clk                                  = 0 ;
        reg   [127:0]  data                        = 0 ;

        // Matrix Outputs
        wire  [7:0]  rowO                          ;
        wire  [7:0]  colR                          ;
        wire  [7:0]  colG                          ;

        always #(PERIOD/2)  clk=~clk;
        Matrix  u_Matrix (
                .clk                     ( clk            ),
                .data                    ( data   [127:0] ),

                .rowO                    ( rowO   [7:0]   ),
                .colR                    ( colR   [7:0]   ),
                .colG                    ( colG   [7:0]   )
        );
initial data = {
        16'b0000000000000010,
        16'b0000000000000000,
        16'b0000000000000000,
        16'b0000000011000000,
        16'b0000001100000000,
        16'b0000000000000000,
        16'b0000000000000000,
        16'b0100000000000000
};
        initial #1000 $finish;
endmodule